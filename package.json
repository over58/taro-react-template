{
  "name": "taro-miniprogram",
  "version": "1.0.0",
  "private": true,
  "description": "taro小程序",
  "main": "index.js",
  "scripts": {
    "upload:asset": "node build/upload.js",
    "upload": "node build/upload-dist-to-cdn.js",
    "build:weapp": "npx taro build --type weapp",
    "build:swan": "npx taro build --type swan",
    "build:alipay": "npx taro build --type alipay",
    "build:tt": "npx taro build --type tt",
    "build:h5": "npx taro build --type h5",
    "build:rn": "npx taro build --type rn",
    "build:h5-local": "cross-env NODE_ENV=development npx taro build --type h5 ",
    "build:weapp-local": "cross-env NODE_ENV=development npx taro build --type weapp ",
    "preview:h5": "node ./preview.js --report",
    "lint": "eslint . --fix",
    "dev:weapp": "npm run build:weapp -- --watch",
    "dev:weapp-local": "cross-env NODE_ENV=development npm run build:weapp -- --watch",
    "dev:swan": "npm run build:swan -- --watch",
    "dev:alipay": "npm run build:alipay -- --watch",
    "dev:tt": "npm run build:tt -- --watch",
    "dev:h5": "npm run build:h5 -- --watch",
    "dev:rn": "npm run build:rn -- --watch"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "@tarojs/components": "^3.0.27",
    "@tarojs/react": "^3.0.27",
    "@tarojs/runtime": "^3.0.27",
    "@tarojs/taro": "^3.0.27",
    "@types/query-string": "^6.3.0",
    "axios": "^0.21.1",
    "clipboard": "^2.0.6",
    "js-cookie": "^2.2.1",
    "lodash": "^4.17.21",
    "query-string": "^6.14.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "vconsole": "^3.4.0",
    "weixin-js-sdk": "^1.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@commitlint/config-conventional": "^11.0.0",
    "@tarojs/cli": "^3.0.27",
    "@tarojs/mini-runner": "^3.0.27",
    "@tarojs/webpack-runner": "^3.0.27",
    "@types/clipboard": "^2.0.1",
    "@types/js-cookie": "^2.2.6",
    "@types/md5": "^2.3.0",
    "@types/qrcode": "^1.4.0",
    "@types/react": "^17.0.0",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "babel-eslint": "^10.1.0",
    "babel-preset-taro": "^3.0.27",
    "chalk": "^4.1.0",
    "commitlint": "^11.0.0",
    "connect": "^3.7.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-taro": "^3.0.27",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-taro": "^3.0.27",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "runjs": "^4.4.2",
    "serve-static": "^1.14.1",
    "stylelint": "^13.9.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "typescript": "^4.1.3",
    "webpack-bundle-analyzer": "^4.4.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint '**/*.{css,scss}' --syntax scss --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
